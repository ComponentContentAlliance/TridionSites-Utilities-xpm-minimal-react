{
    "compilerOptions": {
      "target": "ES2017",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "jsx": "react-jsx",
      "declaration": true,
      "declarationDir": "dist",
      "outDir": "dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "typeRoots": ["./node_modules/@types", "./src"],
      "types": []
    },
    "include": ["src", "src/types"],
    "exclude": ["dist", "node_modules"]
  }
  